@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <form asp-action="Create">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <input asp-for="Nome" class="form-control" placeholder="Nome" />
                </div>
                <div class="form-group">
                    <input asp-for="Sobrenome" class="form-control" placeholder="Sobrenome" />
                </div>
                <div class="form-group">
                    <select asp-for="Sexo" class="form-control" asp-items="ViewBag.Sexo"></select>
                </div>
                <div class="form-group">
                    <input asp-for="RG" class="form-control" placeholder="RG" />
                </div>
                <div class="form-group">
                    <input asp-for="CPF" class="form-control" placeholder="CPF" />
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <input asp-for="CEP" class="form-control" placeholder="CEP" />
                </div>
                <div class="form-group">
                    <input asp-for="Endereco" class="form-control" placeholder="Endereco" />
                </div>
                <div class="form-group">
                    <input asp-for="Bairro" class="form-control" placeholder="Bairro" />
                </div>
                <div class="form-group">
                    <input asp-for="Cidade" class="form-control" placeholder="Cidade" />
                </div>
                <div class="form-group">
                    <select asp-for="Estado" class="form-control" asp-items="ViewBag.Estado"></select>
                </div>
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Criar" class="btn btn-primary" />
        </div>
    </form>
</div>
